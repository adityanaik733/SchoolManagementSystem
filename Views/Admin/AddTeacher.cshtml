@model SchoolManagementSystem.Models.Teacher
@{
    ViewBag.Title = "Add Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.validate.min.js"></script>

<h3 class="text-primary mb-4">Add Teacher</h3>

@using (Html.BeginForm("AddTeacher", "Admin", FormMethod.Post))
{
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.FullName)
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.AssignedClass)
        @Html.TextBoxFor(m => m.AssignedClass, new { @class = "form-control", type = "number", required = "required" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.UserId)
        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required" })
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
    @Html.ActionLink("Cancle", "Dashboard", null, new { @class = "btn btn-primary" })
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}
