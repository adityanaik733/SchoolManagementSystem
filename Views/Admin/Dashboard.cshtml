@{

    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.validate.min.js"></script>

<div class="container-fluid mt-4">
    <h2 class="mb-4 text-center text-primary">Welcome to Admin Dashboard</h2>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success"></h2>
        <a href="@Url.Action("Logout", "Teacher")" class="btn btn-danger">🚪 Logout</a>
    </div>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card border-primary shadow">
                <div class="card-body text-center">
                    <i class="fa fa-user-graduate fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Add Student</h5>
                    <a href="@Url.Action("AddStudent", "Admin")" class="btn btn-outline-primary w-100 mt-2">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-secondary shadow">
                <div class="card-body text-center">
                    <i class="fa fa-chalkboard-teacher fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title">Add Teacher</h5>
                    <a href="@Url.Action("AddTeacher", "Admin")" class="btn btn-outline-secondary w-100 mt-2">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-success shadow">
                <div class="card-body text-center">
                    <i class="fa fa-file-alt fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Generate Result</h5>
                    <a href="@Url.Action("GenerateResult", "Admin")" class="btn btn-outline-success w-100 mt-2">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-info shadow">
                <div class="card-body text-center">
                    <i class="fa fa-list fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Student List</h5>
                    <a href="@Url.Action("StudentList", "Admin")" class="btn btn-outline-info w-100 mt-2">View</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-dark shadow">
                <div class="card-body text-center">
                    <i class="fa fa-list-alt fa-3x text-dark mb-3"></i>
                    <h5 class="card-title">Teacher List</h5>
                    <a href="@Url.Action("TeacherList", "Admin")" class="btn btn-outline-dark w-100 mt-2">View</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-warning shadow">
                <div class="card-body text-center">
                    <i class="fa fa-user-cog fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Assign Teacher</h5>
                    <a href="@Url.Action("AssignTeacher", "Admin")" class="btn btn-outline-warning w-100 mt-2">Assign</a>
                </div>
            </div>
        </div>
    </div>
</div>
