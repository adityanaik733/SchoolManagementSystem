@{
    ViewBag.Title = "Assign Teacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.validate.min.js"></script>

<h3 class="text-primary mb-4">Assign Teacher to Class</h3>

@using (Html.BeginForm("AssignTeacher", "Admin", FormMethod.Post))
{
    <div class="form-group mb-3">
        <label>Select Teacher</label>
        @Html.DropDownList("teacherId", (SelectList)ViewBag.Teachers, "Choose", new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group mb-3">
        <label>Assign to Class</label>
        <input type="number" name="classNo" class="form-control" required min="1" max="10" />
    </div>

    <button type="submit" class="btn btn-primary">Assign</button>
    @Html.ActionLink("Cancle", "Dashboard", null, new { @class = "btn btn-danger" })

}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success mt-3">@ViewBag.Message</div>
}
