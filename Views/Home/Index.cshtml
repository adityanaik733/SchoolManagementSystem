@{
    ViewBag.Title = "Welcome to School Management System";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #e0eafc, #cfdef3);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .btn {
            font-size: 19px;
            padding: 10px 22px;
            border-radius: 8px;
        }
    </style>
    

</head>
<body>
    <div class="container mt-5">
        <div class="card p-5 text-center">
            @*<i class="fa fa-school me-2"></i><strong></strong>*@
            <h2 class="mb-3">🎓 Welcome to <span class="text-primary">eSchool Management System</span></h2>
            <p class="lead text-muted">Please select your role to continue:</p>

            <div class="row justify-content-center mt-4">
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("Login", "Admin")" class="btn btn-outline-primary w-100">👨‍💼 Admin Login</a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("Login", "Teacher")" class="btn btn-outline-success w-100">👨‍🏫 Teacher Login</a>
                </div>
                <div class="col-md-3 mb-3">
                    <a href="@Url.Action("Login", "Student")" class="btn btn-outline-info w-100">👩‍🎓 Student Login</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
