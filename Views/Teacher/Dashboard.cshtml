@{
    ViewBag.Title = "Teacher Dashboard";
    Layout = null;
}

<script src="~/Scripts/jquery-3.7.1.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-success">Welcome, @Session["TeacherName"]</h2>
        <a href="@Url.Action("Logout", "Teacher")" class="btn btn-danger">🚪 Logout</a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <a href="@Url.Action("StudentList", "Teacher")" class="btn btn-outline-primary w-100 mb-2">👥 View Students</a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("EnterMarks", "Teacher")" class="btn btn-outline-secondary w-100 mb-2">✏️ Enter Marks</a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("ViewMarks", "Teacher")" class="btn btn-outline-info w-100 mb-2">📊 View Given Marks</a>
        </div>
    </div>
</div>
