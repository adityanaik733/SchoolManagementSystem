@{
    Layout = null; // Standalone page
    ViewBag.Title = "Student Login";
}

<!DOCTYPE html>
<html>
<head>
    <title>Student Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="col-md-4 offset-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="text-center text-info mb-4">👨‍🎓 Student Login</h4>

                    @using (Html.BeginForm("Login", "Student", FormMethod.Post))
                    {
                        <div class="form-group mb-3">
                            @Html.Label("User ID")
                            @Html.TextBox("userId", null, new { @class = "form-control", placeholder = "Enter User ID", required = "required" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.Label("Password")
                            @Html.Password("password", null, new { @class = "form-control", placeholder = "Enter Password", required = "required" })
                        </div>

                        <div class="d-flex justify-content-center gap-2">
                            <button type="submit" class="btn btn-info">Login</button>
                            @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-danger" })
                        </div>
                    }

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger mt-3 text-center">
                            @ViewBag.Message
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
