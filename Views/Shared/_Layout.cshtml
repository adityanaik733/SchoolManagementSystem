<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - School Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- ✅ Bootstrap & FontAwesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            height: 100vh;
            background-color: #1c1f2f;
            color: white;
            padding-top: 20px;
            position: fixed;
            width: 220px;
        }

            .sidebar a {
                display: block;
                color: white;
                padding: 12px 20px;
                text-decoration: none;
                transition: 0.3s;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #0d6efd;
                }

        .content {
            margin-left: 220px;
            padding: 20px;
        }

        .topbar {
            background-color: #0d6efd;
            color: white;
            padding: 10px 20px;
        }

            .topbar .right {
                float: right;
            }
    </style>
</head>
<body>

    <!-- 🔷 Sidebar -->
    <div class="sidebar">
        <div class="text-center mb-4">
            <h4><i class="fa fa-school me-2"></i><strong>eSchool Admin</strong></h4>
        </div>

        <a href="@Url.Action("Dashboard", "Admin")" class="@(ViewBag.Title == "Dashboard" ? "active" : "")">
            <i class="fa fa-home me-2"></i> Dashboard
        </a>
        <a href="@Url.Action("AddStudent", "Admin")">
            <i class="fa fa-user-plus me-2"></i> Add Student
        </a>
        <a href="@Url.Action("AddTeacher", "Admin")">
            <i class="fa fa-chalkboard-teacher me-2"></i> Add Teacher
        </a>
        <a href="@Url.Action("StudentList", "Admin")">
            <i class="fa fa-users me-2"></i> Student List
        </a>
        <a href="@Url.Action("TeacherList", "Admin")">
            <i class="fa fa-chalkboard me-2"></i> Teacher List
        </a>
        <a href="@Url.Action("AssignTeacher", "Admin")">
            <i class="fa fa-tasks me-2"></i> Assign Teacher
        </a>
        <a href="@Url.Action("GenerateResult", "Admin")">
            <i class="fa fa-file-alt me-2"></i> Generate Result
        </a>
        <a href="@Url.Action("Logout", "Admin")">
            <i class="fa fa-sign-out-alt me-2"></i> Logout
        </a>
    </div>

    <!-- 🔷 Topbar -->
    <!--<div class="topbar">
        
        <span class="right">@ViewBag.Title</span>
    </div>-->

    <!-- 🔷 Page Content -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- ✅ JS Dependencies -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
